<div class="yield">
  <h1><%= t ".create_post" %></h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= simple_form_for @post do |f| %>
        <div class="form-group">
          <span class="require">*</span><%= f.label :title, t(".title") %><br \>
          <%= f.text_field :title, placeholder: t(".title"), class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.input :content, rows: 5, as: :ckeditor,
          input_html: {ckeditor: {toolbar: "FULL"}}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :picture, t(".picture") %>
          <%= f.file_field :picture, class: "form-control",
            accept: "image/jpeg,image/gif,image/png" %>
          <%= f.hidden_field :picture_cache %>
        </div>

        <div class="form-group">
          <%= f.button :submit, t(".post"), class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
