<div id="post-<%= post.id %>">
  <div div="box-post">
    <%= link_to image_tag(post.user.avatar, class: "avatar-post"), post.user %>
    <h3 class="user-name"><%= link_to post.user.name, post.user %></h3>
    <h2 class="post-title"><%= link_to post.title, post %>
      <% if post.tags.any? %>
        <span class="badge badge-info">
          <% post.tags.each do |tag| %>
            <%= link_to tag.name, tag %>,
          <% end %>
        </span>
      <% end %>
    </h2>
    <p class="post-meta"><%= post.updated_at.strftime("%B %d, %Y") %>
      <span class="glyphicon glyphicon-comment"></span><%= post.comments.size %>
    </p>
    <%= social_share_button_tag post.title, url: request.original_url %>
    <span>
      <% if can? :update, post %>
        <%= link_to t(".edit"), edit_post_path(post),
          class: "btn btn-primary button_text" %>
        <%= link_to t(".delete"), post, method: :delete, remote: true,
          data: {confirm: t(".sure")}, class: "btn btn-danger button_text" %>
      <% end %>
    </span>
    <hr>
  </div>
</div>
