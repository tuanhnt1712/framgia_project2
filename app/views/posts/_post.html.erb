<div id="post-<%= post.id %>">
  <div div="box-post">
    <%= link_to image_tag(post.user.avatar, class: "avatar-post"), post.user %>
    <h3 class="user-name"><%= link_to post.user.name, post.user %></h3>
    <h2 class="post-title"><%= link_to post.title, post %></h2>
    <p class="post-meta"><%= t ".post_by" %> <%= post.user.name %>
      <%= t ".on" %> <%= post.updated_at %>
    </p>
    <span>
      <% if can? [:update, :destroy], post %>
        <%= link_to t(".edit"), edit_post_path(post),
        class: "btn btn-primary button_text" %>
        <%= link_to t(".delete"), post, method: :delete, remote: true,
        data: {confirm: t(".sure")}, class: "btn btn-danger button_text" %>
      <% end %>
    </span>
    <hr>
  </div>
</div>
